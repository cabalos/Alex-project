<div class="wrapper">
  
  <%= render 'header_menu_for_articles' %>

  <div class="content">
  
      
    <div class="buttons_container">
      <a href='#' onclick='open_new_article_popup()' class="create_article_link_with_popup">Click article with popup</a>    
      <%= link_to "Create new article", new_article_path, :class => "create_article_link", method: 'get' %>
      <%= link_to "Destroy all articles", article_destroy_all_path, :class => "delete_all_articles_link", method: :get,
          data: { confirm: 'Are you sure you want to destroy all articles?' } %>
    </div>

      <table class="articles_table">
        <tr>
          <th>Title</th>
          <th>Picture</th>
          <th>Text</th>
          <th>Category</th>
          <th>Sub Category</th>
          <th colspan="3"></th>
        </tr>
       
        <% @articles.each do |article| %>
          <tr>
            <td><%= link_to article.title, article_path(article), class: 'articles_name' %></td>
            <td><img class="small_image" src=<%= article.avatar.url %> /></td>
            <td><%= article.text %></td>
            <td><%= article.category.capitalize %></td>
            <td><%= article.sub_category.capitalize %></td>
            <td><a src="" class="hide" >Hide</a></td>
            <td><%= link_to "Edit", edit_article_path(article), class: 'edit', method: 'get' %></td>
            <td><%= link_to "Delete", article_path(article), class: 'delete',
                    method: :delete,
                    data: { confirm: 'Are you sure you want to destroy this article?' } %></td>
          </tr>
        <% end %>
      </table>
      <h1 class="no_matches_found">No Matches Found</h1>
  </div>

  <div id="new_article_popup">
    <%= render 'create_article_popup' %>
  </div>
</div>
<div class="overlay"></div>



